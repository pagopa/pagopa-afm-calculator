{
  "openapi": "3.0.1",
  "info": {
    "title": "PagoPA API Calculator Data",
    "description": "Utility microservice for pagoPA AFM",
    "termsOfService": "https://www.pagopa.gov.it/",
    "version": "0.1.0-1"
  },
  "servers": [
    {
